<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrosShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <h2 class="navbar-brand">BrosShop</h2>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">О нас</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="BrosShopProducts" asp-action="Index">Каталог</a>
                        </li>
                        <li class="nav-item d-flex align-items-center">
                            @if (Context.Request.Cookies.ContainsKey("Token"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="BrosShopCart" asp-action="Index">Перейти в корзину</a>
                            }
                            else
                            {
                                <div class="text-danger mb-0 ms-3">Пожалуйста, авторизуйтесь, чтобы перейти в корзину.</div>
                            }
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        <li class="nav-item">
                            @if (!Context.Request.Cookies.ContainsKey("Token"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Авторизация</a>
                            }
                            else if (Context.Request.Cookies.ContainsKey("Token"))
                            {
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                    <button type="submit" class="nav-link text-dark" style="border: none; background: none; padding: 0;">Выход</button>
                                </form>
                            }
                        </li>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

