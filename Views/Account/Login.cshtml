@using WebApp2.Models;

@model UserDto
<!-- Вставьте это в <head> вашего _Layout.cshtml -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h2>Вход</h2>



@if (ViewBag.Username != null)
{
    <p>Вы вошли как: @ViewBag.Username</p>
    <form asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit">Выйти</button>
    </form>
}
else
{
    <form method="post" asp-controller="Account" asp-action="Login" class="form-group">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username:" name="userName" required>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password:" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Войти</button>
        <p>
            <a href="@Url.Action("Register", "Account")">Зарегистрироваться</a>
        </p>
    </form>
}