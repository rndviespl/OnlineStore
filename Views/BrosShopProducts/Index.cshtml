@model IEnumerable<WebApp2.Models.BrosShopProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Каталог товаров</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">создать товар</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="row no-gutters">
                    <div class="col-md-6">
                        <h4>Images</h4>
                        <div class="row">
                            @if (item.BrosShopImages != null && item.BrosShopImages.Any())
                            {
                                foreach (var imageInCollection in item.BrosShopImages)
                                {
                                    <div class="col-md-6 mb-2">
                                        <img src="@Url.Action("GetImage", "BrosShopImages", new { imageId = imageInCollection.BrosShopImagesId })" class="img-fluid" alt="Image for @item.BrosShopTitle" />
                                    </div>
                                }
                            }
                            else
                            {
                                <p>No images available for this product.</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.BrosShopTitle)</h5>
                            <p class="card-text">
                                <strong>Price:</strong> @Html.DisplayFor(modelItem => item.BrosShopPrice) <br />
                                <strong>Discount:</strong> @Html.DisplayFor(modelItem => item.BrosShopDiscountPercent)% <br />
                                <strong>Article:</strong> @Html.DisplayFor(modelItem => item.BrosShopWbarticul) <br />
                                <strong>Description:</strong> @Html.DisplayFor(modelItem => item.BrosShopDescription) <br />
                                <strong>Purchase Price:</strong> @Html.DisplayFor(modelItem => item.BrosShopPurcharesePrice) <br />
                                <strong>Category ID:</strong> @Html.DisplayFor(modelItem => item.BrosShopCategory.BrosShopCategoryId)
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.BrosShopProductId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.BrosShopProductId" class="btn btn-sm btn-outline-secondary">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.BrosShopProductId" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
