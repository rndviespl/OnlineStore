@model List<CartItem>

@{
    ViewData["Title"] = "Корзина";
}

<h2>Корзина</h2>

@if (Model.Count == 0)
{
    <p>Ваша корзина пуста.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Товар</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>Товар @item.ProductId</td> <!-- Здесь можно добавить название товара -->
                    <td>@item.Quantity</td>
                    <td>
                        <button class="btn btn-danger" onclick="removeFromCart(@item.ProductId)">Удалить</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Checkout" method="post">
        <input type="hidden" name="cartItems" value="@Html.Raw(Json.Serialize(Model))" />
        <button type="submit" name="checkoutButton" class="btn btn-primary">Оформить заказ</button>
    </form>
}

@section Scripts {
    <script>
        function removeFromCart(productId) {
            console.log("Удаляем товар с ID:", productId); // Выводим ID товара
            fetch('/BrosShopCart/RemoveFromCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId })
            })
                .then(response => {
                    if (response.ok) {
                        return response.json(); // Получаем JSON-ответ
                    } else {
                        return response.json().then(data => {
                            alert(data.message || 'Ошибка при удалении товара из корзины.');
                        });
                    }
                })
                .then(data => {
                    if (data.success) {
                        location.reload(); // Перезагружаем страницу, если удаление прошло успешно
                    }
                })
                .catch(error => {
                    console.error('Ошибка:', error);
                    alert('Ошибка при удалении товара из корзины.');
                });
        }
    </script>
}
